{
  "name": "publish-release-notes",
  "version": "1.0.0",
  "description": "NPM hook and GitHub release notes published to Slack",
  "main": "src/index.js",
  "bin": {
    "publish-release-notes": "index.js"
  },
  "scripts": {
    "test": "echo Write more tests!",
    "start": "node src/index.js",
    "lint": "standard --verbose src/*.js",
    "format": "standard-format -w src/*.js",
    "pretest": "npm run format && npm run lint",
    "commit": "commit-wizard"
  },
  "files": [
    "*.js"
  ],
  "keywords": [
    "npm",
    "hook",
    "github",
    "slack",
    "publish",
    "release",
    "notes"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@slack/client": "^3.4.0",
    "as-a": "^1.3.1",
    "bole": "^2.0.0",
    "common-log-string": "^0.2.1",
    "marked": "^0.3.5",
    "npm-hook-receiver": "0.0.7",
    "parse-github-url": "^0.3.1",
    "request-promise": "^3.0.0",
    "slackify-html": "^1.0.1"
  },
  "devDependencies": {
    "pre-git": "^3.9.1",
    "standard": "^7.1.2",
    "standard-format": "^2.2.1"
  },
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [],
      "pre-push": [],
      "post-commit": [],
      "post-checkout": [],
      "post-merge": []
    }
  }
}
